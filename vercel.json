{
  "functions": {
    "api/generate-scripts.js": {
      "maxDuration": 30
    },
    "api/analyze-video-url.js": {
      "maxDuration": 60
    },
    "api/upload-url.js": {
      "maxDuration": 10
    },
    "api/save-script.js": {
      "maxDuration": 10
    },
    "api/get-scripts.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

