{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "functions": {
    "api/analyze-video-advanced.js": {
      "maxDuration": 60,
      "memory": 1024
    },
    "api/analyze-video-simple.js": {
      "maxDuration": 30,
      "memory": 512
    },
    "api/generate-scripts.js": {
      "maxDuration": 30,
      "memory": 256
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

